<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/whi"
    android:layout_height="match_parent"
    tools:context="edu.app.kmit.stockselection.ExploreShop">
    <android.support.v7.widget.CardView
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_weight=".10"
                android:layout_margin="8dp"
                android:onClick="back"
                android:layout_height="match_parent"
                android:contentDescription="@string/back"
                android:src="@drawable/back"
                />
            <TextView
                android:id="@+id/goodshopname"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_width="0dp"
                android:textAllCaps="true"
                android:layout_weight=".70"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_weight=".10"
                android:layout_margin="8dp"
                android:onClick="edit"
                android:layout_height="match_parent"
                android:contentDescription="@string/back"
                android:src="@drawable/edit"
                />
            <ImageView
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_weight=".10"
                android:layout_margin="8dp"
                android:onClick="delete"
                android:layout_height="match_parent"
                android:contentDescription="@string/back"
                android:src="@drawable/delete"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:gravity="center"
                android:textStyle="italic"
                android:text="@string/sdetails"
                android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".10"
                    android:layout_margin="3dp"
                    android:contentDescription="@string/vendorname"
                    android:src="@drawable/person"
                    android:layout_height="match_parent" />
                <TextView

                    android:id="@+id/vendorname"
                    android:layout_width="0dp"
                    android:layout_weight=".90"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:scrollHorizontally="true"

                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight=".10"
                    android:contentDescription="@string/address"
                    android:src="@drawable/location2"
                    android:layout_height="match_parent" />
                <TextView

                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_weight=".90"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:autoLink="map"
                    android:scrollHorizontally="true"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".10"
                    android:layout_margin="3dp"
                    android:contentDescription="@string/phone"
                    android:src="@drawable/phone"
                    android:layout_height="match_parent" />
                <TextView

                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_weight=".90"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    android:autoLink="phone"
                    android:layout_height="wrap_content" /></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".10"
                    android:layout_margin="3dp"
                    android:contentDescription="@string/email"
                    android:src="@drawable/mail"
                    android:layout_height="match_parent" />
                <TextView

                    android:id="@+id/email"
                    android:textSize="15sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:autoLink="email"
                    android:layout_width="0dp"
                    android:layout_weight=".90"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content" /></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".10"
                    android:layout_margin="3dp"
                    android:contentDescription="@string/website"
                    android:src="@drawable/web"
                    android:layout_height="match_parent" />
                <TextView

                    android:id="@+id/website"
                    android:textSize="15sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:autoLink="web"
                    android:scrollHorizontally="true"
                    android:layout_width="0dp"
                    android:layout_weight=".90"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content" /></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight=".10"
                    android:contentDescription="@string/timings"
                    android:src="@drawable/time"
                    android:layout_height="match_parent" />
                <TextView

                    android:textSize="15sp"
                    android:id="@+id/timings"
                    android:layout_width="0dp"
                    android:layout_weight=".90"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content" /></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight=".10"
                    android:contentDescription="@string/info"
                    android:src="@drawable/info"
                    android:layout_height="match_parent" />
                <TextView

                    android:textSize="15sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:id="@+id/info"
                    android:layout_width="0dp"
                    android:layout_weight=".90"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content" />
            </LinearLayout></LinearLayout>
        </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:gravity="center"
                android:textStyle="italic"
                android:text="@string/pdetails"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view2"
            android:layout_width="wrap_content"
            android:scrollbars="horizontal"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


